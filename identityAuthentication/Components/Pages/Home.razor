@page "/"
@using Microsoft.AspNetCore.Authorization

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <div class="text-center p-4 p-md-5">
            <img src="images/logo.png" alt="Mascote do Sistema" class="home-logo mb-4" />
            
            <h1 class="display-5 fw-bold text-primary">Bem-vindo ao Portal de Suporte</h1>
            <p class="fs-5 text-muted mb-4">
                Acesse sua conta para abrir novos chamados ou acompanhar suas solicitações.
            </p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a href="Account/Login" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="fa-solid fa-right-to-bracket me-1"></i> Entrar
                </a>
                <a href="Account/Register" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fa-solid fa-user-plus me-1"></i> Criar Conta
                </a>
            </div>
        </div>
    </NotAuthorized>
    <Authorized>
        <div class="container-fluid py-3">
            <h1 class="display-6 fw-normal mb-3 text-center">
                Bem-vindo, @context.User.Identity?.Name!
            </h1>
            <p class="fs-5 text-muted mb-4 text-center">
                O que você gostaria de fazer?
            </p>

            <div class="row g-3">
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fa-solid fa-circle-plus fa-3x text-primary mb-3"></i>
                            <h4 class="card-title">Abrir Novo Chamado</h4>
                            <p class="card-text">
                                Descreva seu problema ou solicitação e nossa equipe irá ajudar.
                            </p>
                            <a href="/novochamado" class="btn btn-outline-primary stretched-link mt-2">
                                Iniciar Solicitação
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fa-solid fa-ticket fa-3x text-secondary mb-3"></i>
                            <h4 class="card-title">Meus Tickets</h4>
                            <p class="card-text">
                                Acompanhe o status dos seus chamados abertos ou veja seu histórico.
                            </p>
                            <a href="/tickets" class="btn btn-outline-secondary stretched-link mt-2">
                                Ver Meus Tickets
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="fa-solid fa-circle-question fa-3x text-info mb-3"></i>
                            <h4 class="card-title">FAQs</h4>
                            <p class="card-text">
                                Encontre respostas rápidas para os problemas mais comuns.
                            </p>
                            <a href="/faqs" class="btn btn-outline-info stretched-link mt-2">
                                Consultar FAQs
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <AuthorizeView Roles="Admin" Context="adminContext">
                <Authorized>
                    <hr class="my-4" />
                    <div class="p-3 bg-light rounded-3 text-center">
                        <h4 class="fw-bold">
                            <i class="fa-solid fa-user-shield me-2"></i> Opções do Administrador
                        </h4>
                        <p class="text-muted">Acesso rápido às áreas de gerenciamento do sistema.</p>
                        <div class="d-flex flex-wrap gap-2 justify-content-center">
                            <a href="/painel" class="btn btn-outline-dark">
                                <i class="fa-solid fa-chart-pie me-1"></i> Painel
                            </a>
                            <a href="/estatisticas" class="btn btn-outline-dark">
                                <i class="fa-solid fa-chart-bar me-1"></i> Estatísticas
                            </a>
                            <a href="/relatorios" class="btn btn-outline-dark">
                                <i class="fa-solid fa-file-lines me-1"></i> Relatórios
                            </a>
                        </div>
                    </div>
                </Authorized>
            </AuthorizeView>

        </div>
    </Authorized>
</AuthorizeView>